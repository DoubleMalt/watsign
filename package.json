{
  "name": "watsign",
  "description": "Tweetnacl's ed25519 signatures, ported to WebAssembly for speed in the browser",
  "version": "0.1.3",
  "type": "module",
  "license": "MIT",
  "author": "Gregor Mitscha-Baude <gregor.mitscha-baude@gmx.at>",
  "homepage": "https://github.com/mitschabaude/watsign",
  "repository": {
    "type": "git",
    "url": "https://github.com/mitschabaude/watsign"
  },
  "keywords": [
    "webassembly",
    "ed25519",
    "eddsa",
    "cryptography",
    "signatures"
  ],
  "types": "index.d.ts",
  "exports": {
    ".": {
      "node": "./src/nacl-sign.js",
      "default": "./dist/nacl-sign.js"
    }
  },
  "imports": {
    "#crypto": {
      "node": "./src/crypto.node.js",
      "default": "./src/crypto.js"
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "npx watever ./src/wat/sign.wat && npx watever ./src/wat/sign.wat --deno -o src/wat/sign.deno.wat.js && node build.js",
    "prepublishOnly": "npm run build",
    "test": "npm run build && npx chrode test/test-nacl-modified.js",
    "size": "npm run build && npx esbuild --bundle --minify dist/nacl-sign.js | gzip | wc -c"
  },
  "dependencies": {
    "watever-js-wrapper": "^0.1.1"
  },
  "devDependencies": {
    "@types/node": "^16.10.2",
    "chrode": "^0.3.2",
    "compact-base64": "^2.1.2",
    "esbuild": "^0.13.3",
    "esbuild-plugin-import-map": "^2.1.0",
    "fast-base64": "^0.1.6",
    "noble-ed25519": "^1.2.5",
    "simple-signed-records-engine": "0.1.2",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "typescript": "^4.3.5",
    "wabt": "^1.0.23",
    "watever": "^0.3.2"
  }
}
